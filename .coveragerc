# Coverage.py configuration for pmake-recover
# Enforces 100% coverage requirement with proper exclusions

[run]
# Source paths to measure
source = .

# Branch coverage enabled (required for complete coverage)
branch = True

# Parallel processing support
parallel = True

# Files to omit from coverage reporting
omit = 
    */tests/*
    */test_*.py
    */__pycache__/*
    */venv/*
    */.venv/*
    */site-packages/*
    */dist/*
    */build/*
    setup.py
    conftest.py
    .coverage*
    htmlcov/*

# Include security-critical files
include = 
    makepin.py
    recoverpin.py
    helpers.py
    words.py

[report]
# Reporting options
show_missing = True
skip_covered = False
skip_empty = False

# Fail if coverage is under 100%
fail_under = 100

# Precision for coverage percentage
precision = 2

# Sort by coverage percentage
sort = Cover

# Exclude lines that cannot be tested
exclude_lines =
    # Standard pragma
    pragma: no cover
    
    # Don't complain about missing debug-only code
    def __repr__
    if self\.debug
    if settings.DEBUG
    
    # Don't complain if tests don't hit defensive assertion code
    raise AssertionError
    raise NotImplementedError
    
    # Don't complain if non-runnable code isn't run
    if 0:
    if False:
    if __name__ == .__main__.:
    
    # Don't complain about abstract methods
    @(abc\.)?abstractmethod
    class .*\bProtocol\):
    
    # Don't complain about type checking blocks
    if TYPE_CHECKING:
    if typing.TYPE_CHECKING:

[html]
# HTML report configuration
directory = htmlcov
title = pmake-recover Test Coverage Report
show_contexts = True

[xml]
# XML report configuration
output = coverage.xml

[json]
# JSON report configuration
output = coverage.json
show_contexts = True
pretty_print = true

# Paths section for CI/CD compatibility
[paths]
source = 
    .
    /home/*/worktrees/pmake-recover/prp-01a-test-infrastructure
    */pmake-recover/prp-01a-test-infrastructure